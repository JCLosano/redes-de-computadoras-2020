$TTL 1h
; -----------------------------------------------------------------------------
; SOA for example.com
; -----------------------------------------------------------------------------

@ IN SOA dns.root contact.example.com. (
            2016021501      ; Serial
            1h              ; Refresh
            15m             ; Retry
            1d              ; Expire
            1h );           ; Negative Cache TTL

; -----------------------------------------------------------------------------
; zone records
; -----------------------------------------------------------------------------
@         IN    NS        dns.root.
prim.com.    IN    NS        prim.com.
prim.edu.    IN    NS        prim.edu.
sec.edu.    IN    NS        sec.edu.
; -----------------------------------------------------------------------------
; pointer records
; -----------------------------------------------------------------------------
dns.root.            IN    A         10.0.0.12
prim.com.      IN    A         30.0.0.13
prim.edu.      IN    A         20.0.0.15
sec.edu.      IN    A         20.0.0.14
